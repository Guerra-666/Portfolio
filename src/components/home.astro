---
import LogoWallBackend from "../components/logoWallBackend.astro";
import SkillsList from "../React/SkillsList.tsx";
import LogoWallFrontend from "./logoWallFrontend.astro";
---
<section class="text-[var(--white)] mt-12 md:mt-0" id="home">
  <div class="max-w-5xl mx-auto space-y-8 md:py-36 pb-14">
    <div class="text-left space-y-4">
      <p class="text-md md:text-lg text-[var(--white-icon)] shiny-white">
        Hola, soy Adrian Guerra
      </p>
      <div class="flex flex-col lg:flex-row lg:items-center space-y-4 lg:space-y-0 lg:space-x-8 md:gap-4">
        <h1 class="text-[var(--white)] text-5xl md:text-6xl font-medium text-pretty leading-none">
          Desarrollador de Software
        </h1>
        <p class="text-md md:text-2xl text-[var(--white-icon)]">
          Transformando ideas en experiencias digitales interactivas y fluidas
          con desarrollo <span class="text-[var(--sec)] shiny-sec">FullStack</span> de vanguardia.
        </p>
      </div>
      <div class="flex justify-start gap-2 pt-3 md:pt-6">
        <a target="_blank" href="https://github.com/Guerra-666" aria-label="GitHub" class="text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-8">
            <path d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"></path>
          </svg>
        </a>
        <a target="_blank" href="https://www.linkedin.com/in/adrianguerradev/" aria-label="LinkedIn" class="text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-8">
            <path d="M18.3362 18.339H15.6707V14.1622C15.6707 13.1662 15.6505 11.8845 14.2817 11.8845C12.892 11.8845 12.6797 12.9683 12.6797 14.0887V18.339H10.0142V9.75H12.5747V10.9207H12.6092C12.967 10.2457 13.837 9.53325 15.1367 9.53325C17.8375 9.53325 18.337 11.3108 18.337 13.6245V18.339H18.3362ZM7.00373 8.57475C6.14573 8.57475 5.45648 7.88025 5.45648 7.026C5.45648 6.1725 6.14648 5.47875 7.00373 5.47875C7.85873 5.47875 8.55173 6.1725 8.55173 7.026C8.55173 7.88025 7.85798 8.57475 7.00373 8.57475ZM8.34023 18.339H5.66723V9.75H8.34023V18.339ZM19.6697 3H4.32923C3.59498 3 3.00098 3.5805 3.00098 4.29675V19.7033C3.00098 20.4202 3.59498 21 4.32923 21H19.6675C20.401 21 21.001 20.4202 21.001 19.7033V4.29675C21.001 3.5805 20.401 3 19.6675 3H19.6697Z"></path>
          </svg>
        </a>
        <button 
          aria-label="Email" 
          onclick="copyEmail()"
          class="text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="2.1em" height="2.1em" viewBox="0 0 24 24">
            <path fill="currentColor" d="m18.73 5.41l-1.28 1L12 10.46L6.55 6.37l-1.28-1A2 2 0 0 0 2 7.05v11.59A1.36 1.36 0 0 0 3.36 20h3.19v-7.72L12 16.37l5.45-4.09V20h3.19A1.36 1.36 0 0 0 22 18.64V7.05a2 2 0 0 0-3.27-1.64"/>
          </svg>
        </button>
        <a href="public/Adrian_Guerra_CV.pdf" download aria-label="Descargar CV" class="text-[var(--white-icon)] shiny-sec hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)] text-center">
          Descargar CV
        </a>
      </div>
    </div>

    <LogoWallBackend />
    <LogoWallFrontend />

    <div class="flex flex-col lg:flex-row items-center gap-8">
      <SkillsList client:load />
      <div class="flex justify-center md:w-full md:h-auto pt-3 md:pt-9 md:mx-auto px-4 md:px-8 lg:px-16">
        <a href="#About" class="group relative block bg-black w-full max-w-[400px] md:max-w-[500px] h-auto aspect-square rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 border-[1px] border-[var(--sec)] border-opacity-20 hover:border-opacity-40 transform hover:scale-[1.02]">
          <div class="absolute inset-0 h-full w-full object-cover opacity-75 transition-opacity group-hover:opacity-50"></div>
          <img
            alt="Adrian Guerra - Desarrollador de Software"
            src="/avatar.png"
            class="absolute inset-0 h-full w-full object-cover opacity-85 transition-opacity duration-300 group-hover:opacity-60"
            loading="lazy"
            decoding="async"
          />
      
          <div class="relative p-4 sm:p-6 lg:p-8 z-20">
            <p class="text-sm font-medium tracking-widest text-[var(--sec)] uppercase shiny-sec">FullStack Developer</p>
            <p class="text-xl font-bold text-[var(--white)] sm:text-2xl mt-1">Adrian Guerra</p>
      
            <div class="mt-32 sm:mt-48 lg:mt-64">
              <div
                class="translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100"
              >
                <p class="text-sm text-white">
                  Soy un desarrollador de 26 años apasionado por la tecnología y la música metal. 
                  Melómano de corazón y eterno aprendiz, siempre estoy explorando las últimas tendencias para transformar ideas en soluciones innovadoras.
                </p>
              </div>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>

<style is:global>
.shiny-sec {
    background: linear-gradient(
        135deg,
        #A476FF 25%,
        #eee5ff 50%,
        #A476FF 75%
    );
    background-size: 400% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: shine 3s linear infinite;
}

@keyframes shine {
    0% {
        background-position: 100% 50%;
    }
    30%, 70% {
        background-position: 0% 50%;
    }
}

@keyframes fade-in {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}
</style>

<script is:inline>
  function copyEmail() {
    const email = 'contacto@devguerra.com';
    navigator.clipboard.writeText(email)
      .then(() => showNotification())
      .catch(err => console.error('Error al copiar:', err));
  }
  
  function showNotification() {
    const notification = document.createElement('div');
    notification.innerHTML = `
      <div role="alert" class="rounded-xl border border-[var(--white-icon)] bg-[#1414149c] p-4 fixed top-20 right-4 z-[101] animate-fade-in">
        <div class="flex items-start gap-4">
          <span class="text-[var(--sec)]">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </span>
          <div class="flex-1">
            <strong class="block font-medium text-[var(--white)]">¡Email copiado!</strong>
            <p class="mt-1 text-sm text-[var(--white-icon)]">contacto@devguerra.com está en tu portapapeles</p>
          </div>
          <button onclick="this.parentElement.parentElement.remove()" class="text-[var(--white-icon)] hover:text-[var(--white)]">
            <span class="sr-only">Cerrar</span>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>
    `;
    
    document.body.appendChild(notification);
    setTimeout(() => notification.remove(), 3000);
  }
</script>